{
  "manifest_version": 2,

  "name": "URL to QR code converter",
  "short_name": "URL to QR",
  "description": "This extension shows the QR code for the url of the current page.  You also have the option to save the QR code as a png file.",
  "version": "0.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [ {
      "js": [ "jquery.min.js", "qrcode.js", "jquery.qrcode.js", "popup.js" ],
       "matches": [ "<all_urls>"]
  } ]
}
